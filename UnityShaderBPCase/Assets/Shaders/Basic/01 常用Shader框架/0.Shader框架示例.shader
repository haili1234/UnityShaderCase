
Shader "BP/0.Shader框架示例"
{
	//-------------------------------【属性】-----------------------------------------
	Properties
	{
		//纹理
		_MainTex("基本纹理",2D)="White"{TexGen ObjectLinear}	
	}

	//---------------------------------【子着色器】----------------------------------
	SubShader
	{
		//----------------通道---------------
		Pass
		{
			//设置纹理为属性中选择的纹理
			SetTexture[_MainTex]{combine texture}
		}

	}

	//---------------------------------【备胎】----------------------------------------
	//当上面执行失败，设为Unity自带的普通漫反射
	Fallback "Diffuse"
}




